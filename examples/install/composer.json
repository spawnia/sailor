{
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/spawnia/graphql-php.git"
    }
  ],
  "require": {
    "spawnia/sailor": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "require-from-local": [
      "rm -rf vendor/spawnia/sailor && rsync -r ../../ vendor/spawnia/sailor --exclude examples --exclude vendor --exclude .idea --exclude .build"
    ],
    "post-install-cmd": [
      "@require-from-local"
    ],
    "post-update-cmd": [
      "@require-from-local"
    ]
  }
}
