{
  "require": {
    "spawnia/sailor": "@dev"
  },
  "repositories": [
    {
      "type": "path",
      "url": "./sailor",
      "options": {
        "symlink": false
      }
    }
  ],
  "minimum-stability": "dev",
  "scripts": {
    "move-package": "rsync -r ../../ sailor --exclude examples --exclude vendor --exclude .idea --exclude .git --exclude .build --delete",
    "pre-install-cmd": "@move-package",
    "pre-update-cmd": "@move-package"
  }
}
